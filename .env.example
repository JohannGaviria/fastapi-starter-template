# Database configuration
DB_USER=myuser
DB_PASSWORD=mypassword
DB_HOST=db
DB_PORT=5432
DB_NAME=mydb
DATABASE_URL=postgresql://myuser:mypassword@db:5432/mydb

# Application settings
APP_NAME=FastAPI-Starter-Template
APP_SUMMARY=A base template for FastAPI projects
APP_DESCRIPTION=This application is a starter template for FastAPI-based projects. It includes database configuration, JWT authentication, CORS handling, and more.
APP_VERSION=1.0.0
DEBUG=True

# Authentication and security
SECRET_KEY=your-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# CORS configuration
CORS_ALLOW_ORIGINS=http://localhost,http://example.com
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE
CORS_ALLOW_HEADERS=Authorization,Content-Type
